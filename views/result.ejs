<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= result.name %></title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body class="bg-gray-600">
    <section class="flex flex-col sm:flex-col p-4 justify-center">
        <div class="flex border-8 rounded-2xl border-solid justify-center p-4 h-30 bg-white border-gray-800">
            <img src="<%= result.img %>" class="">
        </div>
        <h1 class="text-2xl md:text-4xl py-5 text-white text-center font-extrabold"><%= result.name %></h1>
    </section>
    <section>
        <div class="grid p-4">
            <h2 class="text-xl text-gray-200 font-bold bg-black p-2 rounded-lg">Short Specicifications</h2>
            <div class="grid grid-cols-2 sm:grid-cols-4 l:grid-cols-6 gap-4 py-4">
                <% for (let i = 0; i < result.quickSpec.length; i++) { %>
                    <div class="bg-gray-800 rounded">
                        <h4 class="text-gray-500 pt-2 text-sm pl-2 font-bold"><%= result.quickSpec[i].name %></h4>
                        <h4 class="text-white text-xl p-2 font font-bold"><%= result.quickSpec[i].value %></h4>
                    </div>
                <% } %>
            </div>

            <h2 class="text-xl text-gray-200 font-bold bg-black p-2 rounded-lg">Detailed Specifications</h2>
            <div class="grid l:grid-cols-1 gap-4 py-4">
                <% for (let i = 0; i < result.detailSpec.length; i++) { %>
                    <div class="bg-gray-800 rounded">
                        <h4 class="text-gray-500 pt-2 text-sm pl-2 font-bold"><%= result.detailSpec[i].category %></h4>
                        <div class="grid grid-cols-2 gap-3 p-4">
                            <% for (let j = 0; j < result.detailSpec[i].specifications.length; j++) { %>
                                <h5 class="text-white font-bold border-r"><%= result.detailSpec[i].specifications[j].name %></h5>
                                <h5 class="text-gray-200 font-normal"><%= result.detailSpec[i].specifications[j].value %></h5>    
                            <% } %>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
        
    </section>
</body>
</html>