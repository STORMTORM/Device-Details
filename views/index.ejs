<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Phone Search</title>
        <link rel="stylesheet" href="styles.css">
    </head>
    <script src="index.js"></script>
    <body class="bg-gray-600">
        <main>
            <section class="text-center pt-10">
                <h1 class="text-5xl font-bold text-white">Phone Details</h1>
                <!-- <p class="text-l pt-2 text-gray-200">In this website you can get detailed specicifications about any phone available in the current market.</p> -->
            </section>
            <section class="px-6 py-20">
                <form action="/search" method="POST">
                    <label for="default-search" class="mb-2 text-sm font-medium sr-only text-white">Search</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                            <svg class="w-4 h-4 text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
                            </svg>
                        </div>
                        <input type="search" name="search" class="block w-full p-4 pl-10 text-sm text-gray-900 bg-gray-100 border border-gray-300 focus:outline-none rounded-2xl" placeholder="Search..."  autocomplete="off" onkeyup="queryCheck(event)">
                        <button type="submit" class="text-white absolute right-2.5 bottom-2.5 hover:bg-blue-800 focus:outline-none font-medium rounded-2xl text-sm px-4 py-2 bg-blue-600 hover:bg-blue-700">Search</button>    
                    </div>
                </form>
            </section>
            <section class="text-center ">
                <h1 class="text-3xl p-5 font-bold text-white">Top 3 by daily interest</h1>
                <div class=" p-4">
                    <% for (let i = 0; i < top.length; i++) { %>
                        <a href="/result/<%= top[i].id %>" class="inline-flex flex-row w-full sm:w-1/2 lg:w-1/3 items-center rounded-lg shadow hover:bg-gray-100 border-gray-700 bg-gray-800 hover:bg-gray-700">
                            <div class="flex justify-center rounded-l-lg items-center bg-white">
                                <img class="object-cover p-4 rounded-t-lg sm:w-48 lg:rounded-none lg:rounded-l-lg" src="<%= top[i].img %>" alt="">
                            </div>
                            <div class="flex flex-col h-full w-2/3 justify-between p-4 leading-normal">
                                <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 text-white"><%= top[i].name %></h5>
                                <p class="mb-3 font-normal text-gray-400">Votes: <%= top[i].favorites %></p>
                            </div>
                        </a> 
                    <% } %>
                </div>
            </section>
        </main>
    </body>
</html>